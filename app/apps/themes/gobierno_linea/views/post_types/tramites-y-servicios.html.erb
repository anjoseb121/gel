<% services = current_theme.the_fields_grouped(['gel_services_title', 'gel_services_image', 'gel_services_descr', 'gel_services_url']) %>
<div class="containerdos">
  <div class="row">
    <% services.each_with_index do |item, index| %>
      <div class="carduno">
        <img class="card-img-top" height="200" src="<%= item['gel_services_image'].first %>" width="50" height="50" alt="<%= item['gel_services_title'].first %>">
        <div class="card-body">
          <h4 class="card-title">
            <%= item['gel_services_title'].first %>
          </h4>
          <p class="card-text">
            <%= item['gel_services_descr'].first %>
          </p>
          <a href="<%= item['gel_services_url'].first %>" class="btn btn-primary">Go</a>
        </div>
      </div>
    <% end %>
</div>

<%= form_tag("/formulario", method: "post", multipart: true) do %>
  <p>
    <%= label_tag(:name, "Primero Nombre:*") %>
    <%= text_field_tag :name, params[:name] %>
    </br>
    <%= label_tag(:second_name, "Segundo Nombre:") %>
    <%= text_field_tag :second_name, params[:second_name] %>
    </br>
    <%= label_tag(:last_name, "Primer Apellido:*") %>
    <%= text_field_tag :last_name, params[:last_name] %>
    </br>
    <%= label_tag(:second_last_name, "Segundo Apellido:") %>
    <%= text_field_tag :second_last_name, params[:second_last_name] %>
    </br>
    <%= label_tag(:mail, "Correo electrónico: *") %>
    <%= text_field_tag :mail, params[:mail] %>
    </br>
    <%= label_tag(:phone, "Número Teléfono Contacto:*") %>
    <%= text_field_tag :phone, params[:phone] %>
    </br>
    <%= label_tag(:description, "Descripción: *") %>
    <%= text_field_tag :description, params[:description] %>
    
    </br>
    Información básica del establecimiento.
    Datos del establecimiento e información complementaria del propietario.
    </br>

    <%= label_tag(:address, "Dirección del predio ") %>
    <%= text_field_tag :address, params[:address] %>
    </br>
    <%= label_tag(:neighbor, "Barrio") %>
    <%= text_field_tag :neighbor, params[:neighbor] %>
    </br>
    <%= label_tag(:predial, "Número de predial") %>
    <%= text_field_tag :predial, params[:predial] %>
    </br>
    <%= label_tag(:lot, "Número de Lote ") %>
    <%= text_field_tag :lot, params[:lot] %>
    </br>
    <%= label_tag(:neighborhood, "Manzana") %>
    <%= text_field_tag :neighborhood, params[:neighborhood] %>
    </br>
    <%= label_tag(:urbanization, "Urbanización") %>
    <%= text_field_tag :urbanization, params[:urbanization] %>
    </br>
     <%= label_tag(:id_type, "Tipo de documento de identidad  ") %>
    <%= select_tag(:id_type, options_for_select([['CC', 'CC'],['CE', 'CE'],['NIT', 'NIT']])) %>
