    <%= file_field_tag 'copy_doc_id' %>
    </br>
    <%= label_tag(:receipt_canceled, "Recibo de pago cancelado") %>
    <%= file_field_tag 'receipt_canceled' %>
    </br>
    <%= check_box_tag(:terms) %>
    <%= label_tag(:terms, "Términos y condiciones de uso de datos personales ") %>
    </br>
    <%= submit_tag "Enviar", name: nil %>
  </p>
<% end %>

