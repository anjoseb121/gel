<!-- Seccion de noticias -->
<section id="app-noticias">
  <div class="container">
    <div class="row">
      <!-- Carrusel -->
      <% slides = current_theme.the_fields_grouped(['gel_slider_title', 'gel_slider_image', 'gel_slider_descr']) %>
      <div id="carouselExampleIndicators" class="my-carousel carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <% slides.each_with_index do |i, index| %>
              <li data-target="#carouselExampleIndicators" data-slide-to="<%= index + 1 %>" class="><%= 'active' if index == 0 %>"></li>
          <% end %>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <% slides.each_with_index do |item, index| %>
              <div class="carousel-item <%= 'active' if index == 0 %>">
                <img class="d-block w-100" src="<%= item['gel_slider_image'].first %>" alt="<%= item['gel_slider_title'].first %>">
                <div class="carousel-caption d-none d-md-block">
                  <h3> <%= item['gel_slider_title'].first %> </h3>
                  <p> <%= item['gel_slider_descr'].first %></p>
                </div>
              </div>
          <% end %>
        </div>

        <!-- Controls -->
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <!-- /Carrusel -->

      <!-- Noticias -->
      <div class="col-6">
        <div class="container">
          <div class="row">
            <div class="col-3 mt-3">
              <strong>
                <h3>Noticias</h3>
              </strong>
            </div>
          </div>
          <br>
          <div class="row noticias">
            <% current_site.the_posts(current_theme.get_field("recent_post_type")).latest.limit(current_theme.get_field("home_qty")).decorate.each do |post| %>
              <div class="col-6">
                <!-- PORTFOLIO ITEM -->
                <div class="col-lg-4">
                  <a class="zoom green" href="<%= post.the_url %>" title="<%= post.the_title %>" >
                    <img width="400" height="300" src="<%= post.the_thumb_url%>" class="attachment-post-thumbnail wp-post-image" alt="post image" />
                  </a>
                  <span class="badge badge-secondary bg-success">
                    <strong><%= post.the_title %></strong>
                  </span>
                </div> <!-- /col -->
              </div>
            <% end %> 
          <div class="row">
            <div class="col-12 text-center">
              <button class="btn btn-outline-dark">Más noticias</button>
            </div>
          </div>
        </div>
      </div>
      <!-- /Noticias -->
    </div>
  </div>
</section>
<!-- Seccion de noticias -->
</div>
